<h1>Edit <%=@car.name%></h1><br>

<form action = "/cars/<%=@car.id%>" method = "post">
  <h2>Car Make:<br>
  <input type = "text" name = "make" value = "<%=@car.make%>"><br>
  Car Name:<br>
  <input type = "text" name = "name" value = "<%=@car.name%>"><br>
  Car year:<br>
  <input type = "text" name = "year" value = "<%=@car.year%>"><br>
  Who Owns the Car?<br>
  <%User.all.each do |user|%>
    <ol>
      <li><%=user.name%><input type="checkbox" name="user_id" id="<%=user.name%>" value="<%=user.id%>" <%='checked' if @user.cars.include?(user)%>><%=user.name%></input></li>
    </ol>
  <%end%>

  <input type="submit" value="submit">
</form>
